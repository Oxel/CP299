<%= form_for [topic, post] do |f| %>
  <% if post.errors.any? %>

    <div class="alert alert-danger">
      <h4>There are <%= pluralize(post.errors.count, "error") %>.</h4>
      <ul>
        <% post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= simple_form_for [topic, post] do |f| %>
    <%= f.input :title, input_html: { minlength: 5, placeholder: "Enter post title" }, wrapper_html: { class: 'form-control' } %>
    <%= f.input :body, input_html: { minlength: 20, placeholder: "Enter body test" }, wrapper_html: {class: 'form-control' } %>
    <%= f.button :submit %>
  <% end %>
    
    <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success'%>
  </div>
<% end %>